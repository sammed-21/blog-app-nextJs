{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
      // "baseUrl": "src/",
      // "paths": { 
      //   "@/styles/*": ["styles/*"],
      //   "@/components/*": ["components/*"],
      //   "@/context/*":["context/*"],
      //   "@/utils/*":["utils/*"],
      //   "@/models/*":["models/*"]
      // }
    
    
  },
  
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/context/ThemeContext.js"],
  "exclude": ["node_modules"]
}
